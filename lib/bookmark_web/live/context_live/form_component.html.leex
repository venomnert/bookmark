<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "context-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :text %>
  <%= text_input f, :text %>
  <%= error_tag f, :text %>

  <%= label f, :video %>
  <%= text_input f, :video %>
  <%= error_tag f, :video %>

  <%= label f, :picture %>
  <%= text_input f, :picture %>
  <%= error_tag f, :picture %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
